<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <!-- smelter-->
  <Operation Class="PatchOperationAddModExtension">
    <xpath>/Defs/ThingDef[defName="VFE_FueledSmelter"]</xpath>
    <value>
      <li Class="SwitchBuilding.BuildingGroup">
        <buildingGroup>smelter</buildingGroup>
      </li>
    </value>
  </Operation>

  <!-- butcher-->
  <Operation Class="PatchOperationAddModExtension">
    <xpath>/Defs/ThingDef[defName="VFE_TableButcherElectric"]</xpath>
    <value>
      <li Class="SwitchBuilding.BuildingGroup">
        <buildingGroup>butcher</buildingGroup>
      </li>
    </value>
  </Operation>

  <!-- stonecutter-->
  <Operation Class="PatchOperationAddModExtension">
    <xpath>/Defs/ThingDef[defName="VFE_TableStonecutterElectric"]</xpath>
    <value>
      <li Class="SwitchBuilding.BuildingGroup">
        <buildingGroup>stonecutter</buildingGroup>
      </li>
    </value>
  </Operation>
</Patch>