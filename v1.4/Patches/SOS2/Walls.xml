<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Save Our Ship 2</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <!-- Add the Upgrade comp to Ship hull -->
        <li Class="PatchOperationAddModExtension">
          <xpath>/Defs/ThingDef[defName="Ship_Beam_Unpowered"]</xpath>
          <value>
            <li Class="UpgradeBuildings.BuildingGroup">
              <buildingGroup>shipwall</buildingGroup>
            </li>
          </value>
          <success>Normal</success>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>/Defs/ThingDef[defName="Ship_Beam"]</xpath>
          <value>
            <li Class="UpgradeBuildings.BuildingGroup">
              <buildingGroup>shipwall</buildingGroup>
            </li>
          </value>
          <success>Normal</success>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>